	* bin/review-compile, bin/review-vol, doc/format.txt,
	  lib/review/book.rb, lib/review/builder.rb,
	  lib/review/compiler.rb, lib/review/htmlbuilder.rb,
	  lib/review/htmllayout.rb, lib/review/idgxmlbuilder.rb,
