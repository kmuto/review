%<class>    \if@english
%<class>      \parindent=1em
%<class>    \else
      \parindent=1zw
%<class>    \fi
  \fi
  \kanjiskip=0zw plus .1zw minus .01zw
%<class>  \ifdim\xkanjiskip>\z@
%<class>    \if@slide \xkanjiskip=0.1em \else
      \xkanjiskip=0.25em plus 0.15em minus 0.06em
%<class>    \fi
%<class>  \fi
