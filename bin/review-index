$LOAD_PATH.unshift(File.realpath('../lib', __dir__))

require 'review/tocprinter'

begin
  Signal.trap(:INT) { exit 1 }
  unless RUBY_PLATFORM.match?(/mswin(?!ce)|mingw|cygwin|bccwin/)
    Signal.trap(:PIPE, 'IGNORE')
  end

  ReVIEW::TOCPrinter.execute(*ARGV)
rescue Errno::EPIPE
  exit 0
end
