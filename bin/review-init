require 'pathname'

bindir = Pathname.new(__FILE__).realpath.dirname
$LOAD_PATH.unshift((bindir + '../lib').realpath)

require 'review/init'

if File.basename($PROGRAM_NAME) == File.basename(__FILE__)
  ReVIEW::Init.execute(*ARGV)
end
